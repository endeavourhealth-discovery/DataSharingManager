<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="OrganisationManager">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.endeavourhealth.informationmodel.api.database.models.RegionEntity</class>
        <class>org.endeavourhealth.informationmodel.api.database.models.OrganisationEntity</class>
        <class>org.endeavourhealth.informationmodel.api.database.models.AddressEntity</class>
        <class>org.endeavourhealth.informationmodel.api.database.models.DataFlowEntity</class>
        <class>org.endeavourhealth.informationmodel.api.database.models.DataProcessingAgreementEntity</class>
        <class>org.endeavourhealth.informationmodel.api.database.models.DataSharingAgreementEntity</class>
        <class>org.endeavourhealth.informationmodel.api.database.models.DataSharingSummaryEntity</class>
        <class>org.endeavourhealth.informationmodel.api.database.models.MasterMappingEntity</class>
        <class>org.endeavourhealth.informationmodel.api.database.models.PurposeEntity</class>
        <class>org.endeavourhealth.informationmodel.api.database.models.DocumentationEntity</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
            <property name="hibernate.jdbc.batch_size" value="50" />
        </properties>
    </persistence-unit>
</persistence>
